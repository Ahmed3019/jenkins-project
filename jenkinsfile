pipeline{
    agent any
    environment
    DOCKERHUB: docker-hub-cred
    
    stages{
        stage("building image"){
            steps{
                echo "======== building a docker image ========"
                sh 'docker build -t ahmedsalama3014/html-app:1.0'
            }
            stage("building image"){
            steps{
                echo "======== run a docker image ========"
                sh 'docker run ahmedsalama3014/html-app:1.0'
            }
            steps{
                echo "======== push a docker image ========"
                sh docker login 'docker-hub-cred'
                sh 'docker push ahmedsalama3014/html-app:1.0'
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}